<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <b>
                    @Html.ActionLink("General Super Logistic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </b>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("О нас", "Contact", "Home")</li>
                    @if (User.IsInRole("client") || User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Заявки", "Index", "Orders")</li>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Автопарк", "Index", "Autoparks")</li>
                    }                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>


            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2 col-md-offset-1">
                        <h4>Найти нас</h4>
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="text-center">
                                    <i class="fa fa-2x fa-facebook-square icon-middle"></i>
                                    Facebook
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-2x  fa-twitter-square icon-middle"> </i>
                                    Twitter
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-2x fa-google-plus-square icon-middle"> </i>
                                    Google
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-2x fa-youtube-square icon-middle"> </i>
                                    Youtube
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h4>Напишите Нам</h4>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Feedback", "Home")">Связаться с менеджером</a></li>
                            <li><a href="#">Сообщить о проблеме</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2">
                        <h4>Помощь</h4>
                        <ul class="list-unstyled">
                            <li><a href="#">FAQs</a></li>
                            <li><a href="@Url.Action("Contact", "Home")">О нас</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h4>Контакты</h4>
                        <ul class="list-unstyled">
                            <li>
                                <b>
                                    General Super Logistic
                                </b>
                            </li>
                            <li>
                                <abbr title="Адрес">Адрес:</abbr>
                                Москва, ул. Ленина д. 151
                            </li>
                            <li>
                                <abbr title="Телефон">Тел:</abbr>
                                424-78-89
                            </li>
                            <li>
                                <abbr title="Факс">Факс:</abbr>
                                488-71-25
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-12">
                    <p class="">
                        &copy; @DateTime.Now.Year – Учет заявок на автотранспорт
                    </p>
                </div>
            </div>


        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bxslider")
    @RenderSection("scripts", required: false)
</body>
</html>
