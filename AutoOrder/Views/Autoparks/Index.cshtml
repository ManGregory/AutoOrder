@using AutoOrder.Models
@model IEnumerable<AutoOrder.Models.Autopark>

@{
    ViewBag.Title = "Автопарк";
}

<h2>Автопарк</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trailer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerWidth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerHeight)
        </th>
        <th></th>
    </tr>

    @foreach (Autopark item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trailer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerHeight)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Просмотр", "Details", new {id = item.Id}) |
                @Html.ActionLink("Удалить", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>