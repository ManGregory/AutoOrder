@model AutoOrder.Models.Autopark

@{
    ViewBag.Title = "Автопарк | Редактирование";
    HtmlHelper.ClientValidationEnabled = false;
}

<h2>Редактирование автомобиля</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
