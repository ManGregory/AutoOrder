@model dynamic

@{

}

<div class="container">
    <div class="row">
        <br />
        <form role="form" action="" method="post">
            <div class="col-lg-9 col-lg-offset-1">
                <div class="form-group">
                    <label for="InputName">Ваше имя:</label>
                    <div class="input-group full-width">
                        <input type="text" class="form-control full-width" name="InputName" id="InputName" placeholder="Имя" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputEmail">Email</label>
                    <div class="input-group full-width">
                        <input type="email" class="form-control full-width" id="InputEmail" name="InputEmail" placeholder="Email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputMessage">Сообщение</label>
                    <div class="input-group full-width">
                        <textarea name="InputMessage" id="InputMessage" class="form-control full-width" rows="5" required></textarea>
                    </div>
                </div>
                <input type="submit" name="submit" id="submit" value="Submit" class="btn btn-info pull-right">
            </div>
        </form>
    </div>

</div>
